{
	"name": "@oneezy/ui",
	"version": "0.0.1",
  "private": true,
	"scripts": {
		"dev": "run-p app:dev story:dev",
		"build": "run-s package:build package:css",
		"preview": "histoire preview",

		"app:dev": "vite dev",
		"app:build": "vite build",
		"app:preview": "vite preview",
    
		"story:dev": "histoire dev",
		"story:build": "histoire build",
		"story:preview": "histoire preview",

		"package": "svelte-kit sync && svelte-package",
		"package:dev": "svelte-kit sync && svelte-package --watch",
		"package:build": "svelte-kit sync && svelte-package",
    "package:css": "pnpx tailwindcss -o packages/ui/app.css --minify",

		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",

    "postinstall": "svelte-kit sync && svelte-package",

		"clean": "git clean -fXd"
	},
	"license": "MIT",
	"main": "index.js",
	"module": "index.js",
	"svelte": "index.js",
  "dependencies": {
		"svelte-accessible-accordion": "^2.1.0",
		"svelte-collapsible": "^0.2.1",
		"svelte-inview": "^3.0.1",
		"svrollbar": "^0.12.0"
  },
	"devDependencies": {
		"@histoire/controls": "^0.12.2",
		"@histoire/plugin-svelte": "^0.12.2",
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.0.0",
		"@sveltejs/package": "^1.0.0",
		"@tailwindcss/typography": "^0.5.8",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"histoire": "^0.12.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.55.0",
		"svelte-check": "^2.10.2",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"postcss": "^8.4.14",
		"postcss-load-config": "^4.0.1",
		"autoprefixer": "^10.4.7",
		"svelte-preprocess": "^4.10.6",
		"tailwindcss": "^3.2.4",
		"vite": "^4.0.1"
	},
	"type": "module"
}