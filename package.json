{
	"name": "@oneezy/ui",
	"version": "0.0.10",
	"scripts": {
		"dev": "histoire dev",
		"build": "run-s story:build package:build",
		"preview": "story:preview",
		"app:dev": "vite dev",
		"app:build": "vite build",
		"app:preview": "vite preview",
		"story:dev": "histoire dev",
		"story:build": "histoire build",
		"story:preview": "histoire preview",
		"package": "svelte-kit sync && svelte-package",
		"package:dev": "svelte-kit sync && svelte-package --watch",
		"package:build": "svelte-kit sync && svelte-package",
		"package:css": "pnpx tailwindcss -o packages/ui/app.css --minify",
		"check": "svelte-kit sync && svelte-check --tsconfig tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"postinstall": "svelte-kit sync",
		"bump:prepublish": "git stash && pnpm version patch && git stash apply",
		"bump:prepare": "svelte-kit sync && svelte-package",
		"bump:prepack": "cd package",
		"bump:postpack": "pnpm publish --access public",
		"bump:postpublish": "cd .. && git add . && git commit -m 'chore: updated package' && git push",
		"bump": "run-s bump:prepublish bump:prepare bump:prepack bump:postpack bump:postpublish",
		"clean": "git clean -fXd"
	},
	"license": "MIT",
	"svelte": "./src/lib/index.js",
	"exports": {
		".": {
			"production": {
				"import": "./index.js",
				"require": "./index.cjs"
			},
			"default": {
				"import": "./src/lib/index.js",
				"require": "./src/lib/index.cjs"
			}
		},
		"./app.css": {
			"production": {
				"import": "./app.css"
			},
			"default": {
				"import": "./src/lib/app.css"
			}
		},
		"./tailwind.config.cjs": {
			"production": {
				"require": "./tailwind.config.cjs"
			},
			"default": {
				"require": "./src/lib/tailwind.config.cjs"
			}
		},
		"./postcss.config.cjs": {
			"production": {
				"require": "./postcss.config.cjs"
			},
			"default": {
				"require": "./src/lib/postcss.config.cjs"
			}
		}
	},
	"type": "module",
	"dependencies": {
		"@tailwindcss/typography": "^0.5.8",
		"svelte-accessible-accordion": "^2.1.0",
		"svelte-collapsible": "^0.2.1",
		"svelte-inview": "^3.0.1",
		"svrollbar": "^0.12.0"
	},
	"devDependencies": {
		"@histoire/controls": "^0.12.4",
		"@histoire/plugin-svelte": "^0.12.4",
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.0.1",
		"@sveltejs/package": "^1.0.1",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.47.0",
		"@typescript-eslint/parser": "^5.47.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.30.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"histoire": "^0.12.4",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.20",
		"postcss-import": "^15.1.0",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.0",
		"svelte-check": "^2.10.3",
		"svelte-preprocess": "^5.0.0",
		"tailwindcss": "^3.2.4",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.3"
	}
}
