{
	"name": "@oneezy/ui",
	"version": "0.0.12",
	"scripts": {
		"dev": "histoire dev",
		"build": "run-s story:build package:build package:clean",
		"preview": "story:preview",
		"app:dev": "vite dev",
		"app:build": "vite build",
		"app:preview": "vite preview",
		"story:dev": "histoire dev",
		"story:build": "histoire build",
		"story:preview": "histoire preview",
		"package": "svelte-kit sync && svelte-package",
		"package:dev": "svelte-kit sync && svelte-package --watch",
		"package:watch": "svelte-package --watch",
		"package:build": "svelte-kit sync && svelte-package",
		"package:css": "pnpx tailwindcss -o packages/ui/app.css --minify",
		"package:clean": "trash package/**/*.cts",
		"check": "svelte-kit sync && svelte-check --tsconfig tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"postinstall": "svelte-kit sync",
		"clean": "git clean -fXd"
	},
	"license": "MIT",
	"main": "./index.cjs",
	"module": "./index.js",
	"svelte": [
		"./src/lib/index.js",
		"./index.js"
	],
	"exports": {
		"./package.json": "./package.json",
		".": [
			{
				"import": "./index.js",
				"require": "./index.cjs"
			},
			{
				"import": "./src/lib/index.js",
				"require": "./src/lib/index.cjs"
			}
		],
		"./app.css": [
			{
				"import": "./app.css"
			},
			{
				"import": "./src/lib/app.css"
			}
		],
		"./tailwind.config.cjs": [
			{
				"require": "./tailwind.config.cjs"
			},
			{
				"require": "./src/lib/tailwind.config.cjs"
			}
		],
		"./postcss.config.cjs": [
			{
				"require": "./postcss.config.cjs"
			},
			{
				"require": "./src/lib/postcss.config.cjs"
			}
		]
	},
	"type": "module",
	"dependencies": {
		"@tailwindcss/typography": "^0.5.8",
		"svelte-accessible-accordion": "^2.1.0",
		"svelte-collapsible": "^0.2.1",
		"svelte-inview": "^3.0.1",
		"svrollbar": "^0.12.0"
	},
	"devDependencies": {
		"@histoire/controls": "^0.12.4",
		"@histoire/plugin-svelte": "^0.12.4",
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^1.0.0",
		"@sveltejs/kit": "^1.0.1",
		"@sveltejs/package": "^1.0.1",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.47.0",
		"@typescript-eslint/parser": "^5.47.0",
		"autoprefixer": "^10.4.13",
		"del": "^7.0.0",
		"eslint": "^8.30.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"histoire": "^0.12.4",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.20",
		"postcss-import": "^15.1.0",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"rimraf": "^4.1.2",
		"svelte": "^3.55.0",
		"svelte-check": "^2.10.3",
		"svelte-preprocess": "^5.0.0",
		"tailwindcss": "^3.2.4",
		"trash": "^8.1.0",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.3"
	}
}
