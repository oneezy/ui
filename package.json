{
  "name": "@oneezy/ui",
  "version": "2.0.8",
  "description": "A UI library for Tailwind CSS v4 and Svelte v5",
  "keywords": [
    "tailwindcss",
    "tailwindcss 4",
    "tailwind 4",
    "svelte",
    "svelte 5",
    "ui",
    "components",
    "atomic design"
  ],
  "license": "MIT",
  "homepage": "https://github.com/oneezy/ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oneezy/ui.git"
  },
  "bugs": "https://github.com/oneezy/ui/issues",
  "scripts": {
    "dev": "vite dev --host --open",
    "build": "vite build && npm run package",
    "preview": "vite preview --host --open",
    "package": "svelte-kit sync && svelte-package && publint && npm run copy-package",
    "prepublish": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "copy-package": "node ./+scripts/copy-package.js",
    "remove-tag": "node ./+scripts/remove-tag.js",
    "publish": "node ./+scripts/publish.js",
    "version-bump": "node ./+scripts/version-bump.js",
    "clean": "git clean -fXd"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "style": "./dist/ui.css"
    },
    "./vite.config.js": "./dist/config/vite.config.js",
    "./vite.config.d.ts": "./dist/config/vite.config.d.ts",
    "./svelte.config.js": "./dist/config/svelte.config.js",
    "./svelte.config.d.ts": "./dist/config/svelte.config.d.ts",
    "./ui.css": "./dist/ui.css",
    "./ui": "./dist/ui.css",
    "./config": "./dist/config",
    "./fonts": "./dist/fonts",
    "./utils/*": "./dist/utils/*"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/ui.css",
  "type": "module",
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "dependencies": {
    "@iconify-json/bi": "^1.2.4",
    "@iconify-json/fluent": "^1.2.26",
    "@iconify-json/hugeicons": "^1.2.5",
    "@iconify-json/material-symbols": "^1.2.28",
    "@iconify-json/solar": "^1.2.2",
    "daisyui": "^4.12.24",
    "mode-watcher": "^0.3.1",
    "runed": "^0.29.1",
    "unplugin-icons": "^0.19.3"
  },
  "devDependencies": {
    "@deno/svelte-adapter": "^0.1.0",
    "@iconify-json/fa6-solid": "^1.2.3",
    "@iconify-json/ic": "^1.2.2",
    "@iconify-json/material-symbols": "^1.2.28",
    "@iconify-json/ph": "^1.2.2",
    "@iconify-json/solar": "^1.2.2",
    "@iconify-json/streamline": "^1.2.5",
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/kit": "^2.22.2",
    "@sveltejs/package": "^2.3.12",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@sveltejs/vite-plugin-svelte-inspector": "^4.0.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "publint": "^0.1.16",
    "svelte": "^5.35.1",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "unplugin-icons": "^0.19.0",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "svelte": "^5",
    "tailwindcss": "^4"
  }
}